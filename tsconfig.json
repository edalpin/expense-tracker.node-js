{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["src"]
}
